<div style="background-color: rgba(255, 255, 255, 1); padding:20px;">
    <div class="row">
        <div class="col-5">
            <input class="form-control" type="text" placeholder="Quiero...">
        </div>
        <div class="col-7">
            <i class="fas fa-filter"></i><a href="#"> Añadir filtro</a>
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-5">
            <input class="form-control" type="text" placeholder="No quiero...">
        </div>
        <div class="col-7">
            <i class="fas fa-filter"></i><a href="#"> Añadir filtro</a>
        </div>
    </div>
</div>

<br />
<div class="container">
    <hr />

    <h1 class="Titulo_Principal">Todas las recetas</h1>
    <br />

    @foreach (var item in Model)
    {
        <a href="@Url.Action("Detail_Receta","Recetas", new { Id = item.Id})">
            <div class="row">
                <div class="col-4">
                    <img class="img-fluid" src='@(System.Configuration.ConfigurationManager.AppSettings["URLPublica"] + "/Content/img/Recetas/" + item.Foto)' />
                </div>
                <div class="col-8" style="background-color:#ffffff; border-radius: 10px; ">
                    <h1 class="titulo">@item.Nombre</h1>
                    <p style="margin-bottom:0px; color: black;" class="descripcion"><b>Dificultad:</b> @item.Dificultad</p>
                    <p style="margin-bottom:0px; color: black;" class="descripcion"><b>Duracion:</b> @item.Tiempo_Elaboracion</p>
                    <p style="margin-bottom:0px; color: black;" class="descripcion"><b>Calorías:</b> @item.Calorias</p>
                </div>
            </div>
        </a>
        <hr />
    }
